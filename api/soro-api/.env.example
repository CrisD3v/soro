# ============================================
# SORO API - Environment Variables
# ============================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?sslmode=require
# Example with Neon: postgresql://user:password@ep-xxx.aws.neon.tech/dbname?sslmode=require
# Example local: postgresql://postgres:password@localhost:5432/soro_db
DATABASE_URL="postgresql://user:password@localhost:5432/soro_db"

# ============================================
# JWT CONFIGURATION
# ============================================
# Secret key for JWT token signing
# IMPORTANT: Change this to a strong random string in production
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production-use-at-least-32-characters"

# JWT token expiration times
JWT_ACCESS_TOKEN_EXPIRATION="15m"
JWT_REFRESH_TOKEN_EXPIRATION="7d"

# ============================================
# SERVER CONFIGURATION
# ============================================
# Port where the API will run
PORT=3000

# Node environment (development, production, test)
NODE_ENV="development"

# API URL (used for CORS and callbacks)
API_URL="http://localhost:3000"

# ============================================
# FRONTEND CONFIGURATION
# ============================================
# Frontend URL for CORS configuration
# Multiple URLs can be separated by comma
FRONTEND_URL="http://localhost:3001,http://localhost:5173"

# ============================================
# RATE LIMITING
# ============================================
# Global rate limit (requests per minute)
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# ============================================
# LOGGING
# ============================================
# Log level (error, warn, info, debug, verbose)
LOG_LEVEL="info"

# Enable/disable request logging
ENABLE_REQUEST_LOGGING=true

# Enable/disable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# SECURITY
# ============================================
# Enable/disable Swagger documentation in production
ENABLE_SWAGGER=true

# CORS origins (comma separated)
CORS_ORIGINS="http://localhost:3001,http://localhost:5173"

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# SMTP configuration for sending emails
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER="your-email@gmail.com"
# SMTP_PASSWORD="your-app-password"
# SMTP_FROM="noreply@soro.com"

# ============================================
# FILE STORAGE (Optional)
# ============================================
# AWS S3 or compatible storage
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="soro-documents"

# CloudFlare R2 (S3 compatible)
# R2_ACCOUNT_ID="your-account-id"
# R2_ACCESS_KEY_ID="your-access-key"
# R2_SECRET_ACCESS_KEY="your-secret-key"
# R2_BUCKET="soro-documents"

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
# Redis for caching and sessions
# REDIS_HOST="localhost"
# REDIS_PORT=6379
# REDIS_PASSWORD=""
# REDIS_DB=0

# ============================================
# MONITORING (Optional)
# ============================================
# Sentry for error tracking
# SENTRY_DSN="https://xxx@xxx.ingest.sentry.io/xxx"

# New Relic for APM
# NEW_RELIC_LICENSE_KEY="your-license-key"
# NEW_RELIC_APP_NAME="SORO API"

# ============================================
# EXTERNAL SERVICES (Optional)
# ============================================
# Stripe for payments
# STRIPE_SECRET_KEY="sk_test_xxx"
# STRIPE_WEBHOOK_SECRET="whsec_xxx"

# MercadoPago for payments
# MERCADOPAGO_ACCESS_TOKEN="APP_USR-xxx"

# Twilio for SMS
# TWILIO_ACCOUNT_SID="ACxxx"
# TWILIO_AUTH_TOKEN="xxx"
# TWILIO_PHONE_NUMBER="+1234567890"

# ============================================
# FEATURE FLAGS (Optional)
# ============================================
# Enable/disable specific features
# ENABLE_WEBHOOKS=true
# ENABLE_NOTIFICATIONS=true
# ENABLE_WORKFLOWS=true
# ENABLE_CUSTOM_FIELDS=true

# ============================================
# DEVELOPMENT ONLY
# ============================================
# Enable debug mode
DEBUG=false

# Enable SQL query logging
PRISMA_LOG_QUERIES=false

# Seed database on startup
AUTO_SEED=false
